{
  "name": "node-forum",
  "version": "1.0.0",
  "main": "src/index.js",
  "description": "A Forum app build with (Postgres, Express, Node and Sequelize ORM)",
  "bugs": {
    "url": "https://github.com/onwuvic/node-forum/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:onwuvic/node-forum.git"
  },
  "homepage": "https://github.com/onwuvic/node-forum#readme",
  "author": "Onwuzor Victor <onwuzorvictor@outlook.com>",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && npm run build-server",
    "build-server": "node_modules/.bin/babel src --out-dir dist/src --ignore 'node_modules','src/**/*.spec.js','src/**/*.test.js'",
    "clean": "rm -rf dist && mkdir dist",
    "db:seed": "node_modules/.bin/sequelize db:seed:all",
    "db:migrate": "node_modules/.bin/sequelize db:migrate",
    "db:rollback": "node_modules/.bin/sequelize db:migrate:undo:all",
    "db:rollmigrate": "npm run db:rollback && npm run db:migrate",
    "db:rollmigrateseed": "npm run db:rollback && npm run db:migrate && npm run db:seed",
    "lint": "node_modules/.bin/eslint ./src",
    "lint:fix": "npm run lint --fix",
    "serve": "node dist/src/index.js",
    "start": "cross-env NODE_ENV=production npm run build && npm run serve",
    "dev": "cross-env NODE_ENV=development DEBUG=log node_modules/.bin/nodemon --exec babel-node src/index.js",
    "pretest": "cross-env NODE_ENV=test npm run db:rollmigrate",
    "test": "jest --no-cache  --detectOpenHandles --runInBand --forceExit"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "@hapi/joi": "15.1.1",
    "bcrypt": "5.0.0",
    "body-parser": "^1.18.3",
    "core-js": "3.1.4",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "debug": "^4.1.1",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "jsonwebtoken": "8.5.1",
    "morgan": "^1.9.1",
    "pg": "^7.8.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "5.21.6",
    "sequelize-cli": "5.5.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/plugin-transform-async-to-generator": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.12.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "faker": "4.1.0",
    "jest": "^24.1.0",
    "nodemon": "1.18.11",
    "supertest": "^3.4.2"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!**/__tests__/**/*.js?(x)"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/?(*.)(spec|test)js",
      "<rootDir>/src/**/?(*.)(spec|test).js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/database/migrations",
      "<rootDir>/src/database/seeders",
      "<rootDir>/src/database/models/index.js"
    ],
    "testEnvironment": "node"
  }
}
